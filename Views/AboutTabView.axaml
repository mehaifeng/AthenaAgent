<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Athena.UI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Athena.UI.Views.AboutTabView"
             x:DataType="vm:AboutTabViewModel"
             FontFamily="{DynamicResource MonospaceFontFamily}">

    <Design.DataContext>
        <vm:AboutTabViewModel/>
    </Design.DataContext>

    <Border BorderBrush="{DynamicResource DosBorderBrush}" 
            BorderThickness="2" 
            Margin="4" 
            Background="{DynamicResource DosBackgroundBrush}">
        
        <Grid RowDefinitions="Auto,*">
            
            <!-- HEADER BAR -->
            <Border Grid.Row="0" 
                    BorderBrush="{DynamicResource DosBorderBrush}" 
                    BorderThickness="0,0,0,2" 
                    Padding="12,6" 
                    Background="{DynamicResource DosInputBackgroundBrush}">
                <TextBlock Text="ATHENA.SYS // SYSTEM_DIAGNOSTICS_&amp;_INFO" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource DosHighlightBrush}" 
                           FontSize="14"/>
            </Border>

            <ScrollViewer Grid.Row="1" Padding="20">
                <StackPanel Spacing="24" HorizontalAlignment="Center">
                    
                    <!-- SYSTEM LOGO BLOCK -->
                    <Border BorderBrush="{DynamicResource DosBorderBrush}" 
                            BorderThickness="1" 
                            Padding="24" 
                            Background="{DynamicResource DosInputBackgroundBrush}">
                        <StackPanel Spacing="16">
                            <TextBlock Text="  ___ _____ _  _ ___ _  _   _    &#x0a; / _ \_   _| || | __| \| | /_\   &#x0a;|  _  || | | __ | _|| .` |/ _ \  &#x0a;|_| |_||_| |_||_|___|_|\_/_/ \_\ " 
                                       FontFamily="{DynamicResource MonospaceFontFamily}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource DosHighlightBrush}"
                                       LineHeight="20"/>
                            
                            <Border Height="1" Background="{DynamicResource DosBorderBrush}" Opacity="0.5"/>
                            
                            <TextBlock Text="&gt; ARTIFICIAL INTELLIGENCE COMPANION MODULE" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource DosForegroundBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- SPECIFICATIONS BLOCK -->
                    <Border BorderBrush="{DynamicResource DosBorderBrush}" 
                            BorderThickness="1" 
                            Padding="16" 
                            HorizontalAlignment="Stretch">
                        <StackPanel Spacing="12">
                            <TextBlock Text="&gt; SYSTEM_SPECIFICATIONS:" 
                                       Foreground="{DynamicResource DosSecondaryBrush}" 
                                       FontWeight="Bold"/>
                            
                            <Grid ColumnDefinitions="160,*" RowDefinitions="Auto,Auto,Auto,Auto" Margin="12,0,0,0">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="KERNEL_VER:" Foreground="{DynamicResource DosSecondaryBrush}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="v1.0.0-STABLE" Foreground="{DynamicResource DosHighlightBrush}" FontWeight="Bold"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="FRAMEWORK:" Foreground="{DynamicResource DosSecondaryBrush}" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text=".NET CORE / AVALONIA UI" Foreground="{DynamicResource DosForegroundBrush}" Margin="0,8,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="LICENSE:" Foreground="{DynamicResource DosSecondaryBrush}" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="MIT (OPEN_SOURCE)" Foreground="{DynamicResource DosForegroundBrush}" Margin="0,8,0,0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="AUTHOR:" Foreground="{DynamicResource DosSecondaryBrush}" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="2024 (C) PROJECT_ATHENA" Foreground="{DynamicResource DosForegroundBrush}" Margin="0,8,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- QUOTE / LORE BLOCK -->
                    <Border BorderBrush="{DynamicResource DosBorderBrush}" 
                            BorderThickness="1" 
                            Padding="12" 
                            Background="{DynamicResource DosInputBackgroundBrush}">
                        <TextBlock Text="&quot;Wisdom begins in wonder.&quot; â€” Initialization Sequence 0x01" 
                                   FontStyle="Italic" 
                                   FontSize="11" 
                                   HorizontalAlignment="Center" 
                                   Foreground="{DynamicResource DosSecondaryBrush}"/>
                    </Border>

                    <!-- ACTION BUTTONS -->
                    <StackPanel Orientation="Horizontal" 
                                Spacing="16" 
                                HorizontalAlignment="Center" 
                                Margin="0,8,0,0">
                        <Button Content="[CHK_UPDATES]" 
                                Command="{Binding CheckForUpdatesCommand}" 
                                BorderThickness="1" 
                                BorderBrush="{DynamicResource DosHighlightBrush}" 
                                Foreground="{DynamicResource DosHighlightBrush}" 
                                Background="Transparent" 
                                Padding="16,8"/>
                        <Button Content="[VIEW_DOCS]" 
                                Command="{Binding OpenDocumentationCommand}" 
                                BorderThickness="1" 
                                BorderBrush="{DynamicResource DosBorderBrush}" 
                                Background="Transparent" 
                                Padding="16,8"/>
                        <Button Content="[SOURCE_REPO]" 
                                Command="{Binding OpenGitHubCommand}" 
                                BorderThickness="1" 
                                BorderBrush="{DynamicResource DosBorderBrush}" 
                                Background="Transparent" 
                                Padding="16,8"/>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
            
        </Grid>
    </Border>
</UserControl>
